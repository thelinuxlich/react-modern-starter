{
  "name": "react-modern-starter",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "vite --port 3333",
    "format": "prettier-standard --format",
    "dev:serve": "SSR_PORT=3334 node server",
    "build": "yarn build:client && yarn build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.jsx --outDir dist/server",
    "generate": "vite build --outDir dist/static && yarn build:server && node prerender",
    "serve": "cross-env NODE_ENV=production SSR_PORT=3334 node server",
    "test": "c8 uvu tests -r esbuild-register -i setup"
  },
  "lint-staged": {
    "*": ["prettier-standard --lint"]
  },
  "dependencies": {
    "@americanexpress/react-seo": "1.4.1",
    "express": "4.17.1",
    "global": "4.4.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-router-dom": "5.2.0",
    "valtio": "0.7.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react-refresh": "1.3.1",
    "c8": "7.5.0",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.8.52",
    "esbuild-register": "2.0.0",
    "eslint-plugin-valtio": "0.2.0",
    "husky": "5.0.9",
    "linkedom": "0.4.24",
    "lint-staged": "10.5.4",
    "prettier-standard": "16.4.1",
    "serve-static": "1.14.1",
    "uvu": "0.5.1",
    "vite": "2.0.3",
    "vite-plugin-windicss": "0.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

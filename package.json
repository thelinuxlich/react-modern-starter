{
  "name": "react-modern-starter",
  "version": "1.0.0-beta-3",
  "license": "MIT",
  "scripts": {
    "standup": "git-standup",
    "dev": "vite --port 3333",
    "format": "prettier-standard --format",
    "dev:serve": "SSR_PORT=3334 node server",
    "build": "yarn build:client && yarn build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.jsx --outDir dist/server",
    "generate": "vite build --outDir dist/static && yarn build:server && node prerender",
    "serve": "cross-env NODE_ENV=production SSR_PORT=3334 node server",
    "test": "c8 uvu tests -r esbuild-register -i setup"
  },
  "lint-staged": {
    "*": "prettier-standard --lint"
  },
  "dependencies": {
    "@americanexpress/react-seo": "1.4.1",
    "express": "4.17.1",
    "global": "4.4.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-router-dom": "5.2.0",
    "valtio": "0.7.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react-refresh": "1.3.1",
    "c8": "7.6.0",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.8.54",
    "esbuild-register": "2.0.0",
    "eslint": "7.21.0",
    "eslint-plugin-valtio": "0.3.0",
    "git-notify": "0.2.3",
    "git-standup": "2.3.2",
    "husky": "4.3.8",
    "linkedom": "0.5.4",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "prettier-standard": "16.4.1",
    "serve-static": "1.14.1",
    "uvu": "0.5.1",
    "vite": "2.0.5",
    "vite-plugin-windicss": "0.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "post-merge": "git-notify merge $HUSKY_GIT_PARAMS",
      "post-rewrite": "git-notify rewrite $HUSKY_GIT_PARAMS",
      "post-checkout": "git-notify checkout $HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

{
  "name": "react-modern-starter",
  "version": "1.0.2",
  "license": "MIT",
  "scripts": {
    "standup": "git-standup",
    "dev": "vite --port 4000",
    "format": "prettier-standard --lint '**/*.{js,css,jsx}'",
    "build": "yarn build:client && yarn build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.jsx --outDir dist/server",
    "generate": "vite build --outDir dist/static && yarn build:server && node prerender",
    "serve": "cross-env NODE_ENV=production SSR_PORT=4001 node -r esm server",
    "test": "c8 uvu tests -r esbuild-register -i setup"
  },
  "lint-staged": {
    "*.{js,css,jsx}": "prettier-standard --lint"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@americanexpress/react-seo": "1.4.1",
    "express": "4.17.1",
    "global": "4.4.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.2.0",
    "valtio": "1.0.3"
  },
  "devDependencies": {
    "@babel/plugin-syntax-jsx": "7.12.13",
    "@mdx-js/mdx": "2.0.0-next.9",
    "@mdx-js/react": "2.0.0-next.9",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@vitejs/plugin-react-refresh": "1.3.2",
    "c8": "7.7.1",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.11.6",
    "esbuild-register": "2.4.0",
    "eslint": "7.23.0",
    "eslint-plugin-valtio": "0.3.1",
    "esm": "3.2.25",
    "git-notify": "0.2.3",
    "git-standup": "2.3.2",
    "husky": "4.3.8",
    "linkedom": "0.6.2",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "prettier-standard": "16.4.1",
    "serve-static": "1.14.1",
    "uvu": "0.5.1",
    "vite": "2.1.5",
    "vite-plugin-babel-macros": "1.0.5",
    "vite-plugin-mdx": "3.4.0",
    "vite-plugin-ssr": "0.1.0-beta.27",
    "vite-plugin-windicss": "0.13.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "post-merge": "git-notify merge $HUSKY_GIT_PARAMS",
      "post-rewrite": "git-notify rewrite $HUSKY_GIT_PARAMS",
      "post-checkout": "git-notify checkout $HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "master",
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
